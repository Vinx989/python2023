def switch (lang):
    if lang == 'esci':
        return False
    elif lang == '1':
        return 1
    elif lang == '2':
        return 2
    elif lang == '3':
        return 3
    elif lang == '4':
        return 4
    else:
        print('Errore di tipo typing')

